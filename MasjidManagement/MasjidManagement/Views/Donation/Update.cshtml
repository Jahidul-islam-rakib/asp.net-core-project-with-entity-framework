@model MasjidManagement.Models.Donation

@{
	ViewData["title"] = "UpdateDon";
}

<h2>Update donation details</h2>

<hr />

<div class="row">
	<div class="col-md-4">
		<form asp-action="Update" >
			<input type="hidden" asp-for="Id" />

			<div class="form-group">
				<label asp-for="DonorId" class="label-control"></label>
				<input asp-for="DonorId" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="DonorName" class="label-control" ></label>
				<input asp-for="DonorName" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Amount" class="label-control" ></label>
				<input asp-for="Amount" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="DonationDate" class="label-control" ></label>
				<input asp-for="DonationDate" class="form-control" />
			</div>

			<div class="form-group">
				<input type="submit" value="save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>


