@model MasjidManagement.Models.Imam

@{
	ViewData["title"] = "UpdateImam";
}

<h1>Update Imam Info</h1>
<hr />

<div class="row">
	<div class="col-md-4">
		<form asp-action="Update">
			<input type="hidden" asp-for="Id" />

			<div class="form-group">
				<label asp-for="ImamName" class="control-label"></label>
				<input asp-for="ImamName" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="Qualification" class="control-label"></label>
				<input asp-for="Qualification" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="HireDate" class="control-label"></label>
				<input asp-for="HireDate" class="form-control" />
			</div>

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

