@model IEnumerable<UniversityManagement.Models.Professor>

@{
	ViewData["title"] = "professor list";
}

<h1>Professor List</h1>

<div class="container mt-4">
	<a class="btn btn-primary" asp-action="Create" role="button">Create professor</a>
</div>

<table class="table">
	<thead>
		<tr>
			<th>Professor name</th>
			<th>Department</th>
			<th>Hiring Date</th>
		</tr>
	</thead>

	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.ProfessorName</td>
				<td>@item.PDepartment</td>
				<td>@item.PHireDate</td>
				<td>
					<a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id">Edit</a>
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

				</td>
			</tr>
		}
	</tbody>

</table>